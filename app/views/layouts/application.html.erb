<!DOCTYPE html>
<html>
  <head>
    <title>Store</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="flex-content-container">
      <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <%= link_to root_path do %>
          <%= link_to 'S', root_path, class: 'navbar-brand' %>
        <% end %>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
          <div class="nav-link-custom-div">
            <%= link_to 'Home', root_path, class: 'nav-link-custom' %>
          </div>
          <div class="nav-link-custom-div">
            <%= link_to 'Products', products_path, class: 'nav-link-custom' %>
          </div>
          <div class="nav-link-custom-div">
            <%= link_to 'Sellers', sellers_path, class: 'nav-link-custom' %>
          </div>
          <% if user_signed_in? %>
            <div class="nav-link-custom-div">
              <%= link_to 'My Dashboard', dashboard_path(current_user), class: 'nav-link-custom' %>
            </div>
            <div class="nav-link-custom-div">
              <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link-custom' %>
            </div>
          <% else %>
            <div class="nav-link-custom-div">
              <%= link_to 'Sign in', new_user_session_path, class: 'nav-link-custom' %>
            </div>
            <div class="nav-link-custom-div">
              <%= link_to 'Sign up!', new_user_registration_path, class: 'nav-link-custom' %>
            </div>
          <% end %>
        </div>

      </nav>

      <% if notice.present? %>
        <p class="alert alert-info"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>


      <%= yield %>

    </div>
  </body>
</html>
